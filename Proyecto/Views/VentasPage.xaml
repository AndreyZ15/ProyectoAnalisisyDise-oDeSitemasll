<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto.Views.VentasPage"
             Title="Agregar Venta">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="15">

            <Label Text="Cliente" FontAttributes="Bold"/>
            <Picker x:Name="ClientePicker"
                    Title="Selecciona un cliente"
                    ItemDisplayBinding="{Binding Nombre}" />

            <Label Text="Método de Pago" FontAttributes="Bold"/>
            <Picker x:Name="MetodoPagoPicker"
                    Title="Selecciona un método" />

            <Label Text="Total" FontAttributes="Bold"/>
            <Entry x:Name="TotalEntry"
                   Placeholder="₡"
                   Keyboard="Numeric" />

            <Button Text="Agregar Venta"
                    Clicked="OnAgregarVentaClicked"
                    BackgroundColor="Green"
                    TextColor="White"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>


