<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto.Views.VentasPage"
             Title="Ventas">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFF1F3" Offset="0.0"/>
            <GradientStop Color="#FFD6D0" Offset="0.3"/>
            <GradientStop Color="LightPink" Offset="0.6"/>
            <GradientStop Color="Plum" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout Padding="80,20" Spacing="20">

            <!-- Título -->
            <Border StrokeThickness="0" BackgroundColor="Transparent">
                <Border.Shadow>
                    <Shadow Brush="Gray" Radius="5" Opacity="0.6" Offset="2,2"/>
                </Border.Shadow>
                <Label
                    Text="Registrar una venta"
                    HorizontalTextAlignment="Center"
                    FontFamily="Montserrat"
                    FontSize="30"
                    FontAttributes="Italic"
                    TextColor="Black"/>
            </Border>

            <!-- Picker para Cliente -->
            <Picker x:Name="ClientePicker"
                    Title="Seleccionar Cliente"
                    FontFamily="Montserrat"
                    FontSize="17"
                    TextColor="Black"
                    BackgroundColor="#f9f2f5"
                    HorizontalTextAlignment="Center"
                    WidthRequest="500" 
                    TitleColor="Black"
                    ItemDisplayBinding="{Binding Nombre}"/>

            <StackLayout>
                <!-- Título para Total de la Venta -->
                <Label Text="Total de la venta"
                     FontFamily="Montserrat"
                     FontSize="17"
                     TextColor="Black"
                       HorizontalTextAlignment="Center"
                     Margin="0,10,0,5"/>
                <!-- Espaciado encima y debajo del título -->

                <!-- Campo de Entrada para Total de la Venta -->
                <Entry x:Name="TotalVentaEntry"
                    Placeholder=""
                    Keyboard="Numeric"
                    PlaceholderColor="#b5b5b5"
                    FontFamily="Montserrat"
                    FontSize="17"
                       
                    BackgroundColor="#f9f2f5"
                    WidthRequest="500"/>
            </StackLayout>
            
            
            <!-- Método de Pago -->
            <Picker x:Name="MetodoPagoPicker"
                    Title="Seleccionar Método"
                    FontFamily="Montserrat"
                    FontSize="17"
                    TextColor="Black"
                    BackgroundColor="#f9f2f5"
                    HorizontalTextAlignment="Center"
                    TitleColor="Black"
                    WidthRequest="500" />

            <!-- Estado Completado -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Label Text="Completado"
                       FontFamily="Montserrat"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="Black"
                       VerticalOptions="Center"/>
                <Switch x:Name="CompletadoSwitch"
                        HorizontalOptions="Start"/>
            </HorizontalStackLayout>

            <!-- Botón Agregar Venta -->
            <Border StrokeThickness="0"
                    BackgroundColor="Transparent"
                    WidthRequest="300"
                    HeightRequest="40"
                    Padding="0"
                    StrokeShape="RoundRectangle 15">
                <Border.Shadow>
                    <Shadow Brush="Black" Radius="12" Opacity="0.4"/>
                </Border.Shadow>
                <Button x:Name="AgregarVentaBtn"
                        Text="Agregar Venta"
                        Clicked="OnAgregarVentaClicked"
                        FontFamily="Montserrat"
                        FontAttributes="Bold"
                        FontSize="22"
                        TextColor="White"
                        WidthRequest="300"
                        HeightRequest="40"
                        Padding="10"
                        CornerRadius="15"
                        BackgroundColor="#a37281"
                        VerticalOptions="Center">
                    <Button.Triggers>
                        <Trigger TargetType="Button" Property="IsPressed" Value="True">
                            <Setter Property="Scale" Value="0.95"/>
                            <Setter Property="Opacity" Value="0.8"/>
                        </Trigger>
                    </Button.Triggers>
                </Button>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
